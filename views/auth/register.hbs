<style>
    body {

        background-image: url("");
        background-repeat: no-repeat;
        background-size: cover;
    }

    h1 {
        margin-top: 50px;
    }
</style>

<div class="container" style="margin-top:50px">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <img src="../../public/images/joysticklogo.png" alt="">
            <h1>SIGN UP</h1>
            <hr>
            <form action="/auth/register" method="POST" enctype="multipart/form-data">
                <div class="mb-3 row">

                    <div class="mb-3">
                        <label for="emailInput" class="form-label">Email</label>
                        <input type="email" class="form-control" id="emailInput" name="email">

                    </div>
                    <div class="col">
                        <label for="usernickInput" class="form-label">Name</label>
                        <input type="text" class="form-control" id="usernameInput" name="username">
                    </div>

                    <div class="col">
                        <label for="usernickInput" class="form-label">Nick</label>
                        <input type="text" class="form-control" id="usernickinput" name="nickname">
                    </div>


                    <div class="mb-3">
                        <label for="pwdInput" class="form-label">Password</label>
                        <input type="password" class="form-control" id="pwdInput" name="password">
                    </div>
                    <div class="col mt-3">
                        <label for="avatarImg" class="form-label">Upload an image</label>
                        <input type="file" placeholder="form-control" id="avatarImg" name="avatarImg">
                    </div>
                </div>

                {{#if errorMessage}}
                <p id="error">{{errorMessage}}</p>
                {{/if}}
                <div class="row" style="">
                    <div class="d-grid gap-2">
                        <input type="submit" class="btn btn-warning" value="Register">
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>