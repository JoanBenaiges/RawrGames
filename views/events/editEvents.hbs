<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <h1>Editar {{eventName}}</h1>

            <hr>

            <form action="/events/edit/{{_id}}" method="POST">

                <div class="mb-3">
                    <label for="field1" class="form-label">Name</label>
                    <input type="text" class="form-control" id="field1" name="eventName" value="{{eventName}}">
                </div>

                <div class="mb-3">
                    <label for="field2" class="form-label">Description</label>
                    <input type="text" class="form-control" id="field2" name="description" value="{{description}}">
                </div>

                <div class="mb-3">
                    <label for="field3" class="form-label">Latitude</label>
                    <input type="text" class="form-control" id="field3" name="latitude"
                        value="{{location.coordinates.[0]}}">
                    <label for="field4" class="form-label">Longitude</label>
                    <input type="text" class="form-control" id="field4" name="longitude"
                        value="{{location.coordinates.[1]}}">
                </div>


                <input type="text" name="user_id" hidden value="{{_id}}">

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Guardar</button>
                </div>
            </form>
        </div>
    </div>

</div>