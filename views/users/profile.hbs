<body>
    <div class="card mb-3" style="width: 50%; margin: 70px auto;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{user.avatarImg}}" alt="Avatar"
                    style="border-radius: 50%; width: 300px; height: 300px; margin: 20px auto; margin-left: 10px">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h1 class="card-title">{{user.username}}</h1>
                    <hr>
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Nombre de usuario:</strong> {{user.username}}</li>
                        <li class="list-group-item"><strong>Email:</strong> {{user.email}}</li>
                        <li class="list-group-item"><strong>Apodo:</strong> {{user.nickname}}</li>
                        <li class="list-group-item"><strong>Sobre mi:</strong> {{user.aboutMe}}</li>
                    </ul>
                </div>
                <div class="card-body text-center">
                    <form action="/users/delete/{{user._id}}" method="POST" class="d-inline">
                        <input type="submit" value="Eliminar" class="btn btn-danger">
                    </form>
                    <a href="/users/edit/{{user._id}}" class="btn btn-warning ml-2">Editar</a>
                    <a href="/users/userlist" class="btn btn-secondary ml-2">Volver</a>
                </div>
            </div>
        </div>
    </div>

</body>